#!/bin/bash

get_pts (){
  IN=$(wmctrl -l | awk "{print \$4}" | grep "URXVTVIMEVAL")
  arrIN=(${IN//-/ })
  PTS=${arrIN[1]}
}
get_pts
if [ "$PTS" = "" ]
then
  urxvt -e zsh -is eval "cd $PWD ; trap 'echo -ne \"\e]0;URXVTVIMEVAL-\$TTY\007\"' DEBUG ; vim -c \"set titlestring=URXVTVIMEVAL-\$TTY | set title  | $@\""
else
  ttyecho -n $PTS "$@ | silent !echo -ne \"\\e[5t\""
  ttyecho -n $PTS :redraw!
fi
